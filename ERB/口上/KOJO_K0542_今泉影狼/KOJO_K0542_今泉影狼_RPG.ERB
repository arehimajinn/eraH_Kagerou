;=================================================
;   sub KOJO_RPG_BTL_ACTION_K542
;=================================================
;   キャラ口上:RPG戦闘行動部
;-------------------------------------------------
;   RPG機能での戦闘口上
;-------------------------------------------------
@KOJO_RPG_BTL_ACTION_K542

;スキル名称
LOCALS = %GSBTL_SKL_NAME%

;-----------------------------
;- スキルID別
;-----------------------------

;通常攻撃
IF GSBTL_SKL_ID == [[スキル:通常攻撃]]
	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
	LOCALS '= RAND_SPLIT("はぁっ！/くらいなさいっ！")
	PRINTFORML ┃%LOCALS,72,LEFT%┃
	PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
ELSEIF GROUPMATCH(GSBTL_SKL_ID, [[スキル:バインドボイス]], [[スキル:パニックボイス]])
	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
	PRINTFORML ┃%"アオオーンッ！",72,LEFT%┃
	PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
ELSE

	;-----------------------------
	;- 相性別
	;-----------------------------
	;下記CASE文のコメントアウトを外せば、各相性で記述可能
	;面倒な場合はそのままCASEELSEでまとめて書く

	;-- CHK:スキルタイプ
	SELECTCASE GSBTL_SKL_TYPE
		;物理
		CASE BTL_GET_TYPE_NUM("物理")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"ぶっ潰すっ！",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;銃
		CASE BTL_GET_TYPE_NUM("銃")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"中々いいわね、これ",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;戦技
		CASE BTL_GET_TYPE_NUM("戦技")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"喰らい尽くしてあげる！",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;火炎
		CASE BTL_GET_TYPE_NUM("火炎")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"火に良い思い出は無いのよね……",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;氷結
		CASE BTL_GET_TYPE_NUM("氷結")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"ちょっと冷たいわよ？",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;電撃
		CASE BTL_GET_TYPE_NUM("電撃")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"痺れろっ！",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;衝撃
		CASE BTL_GET_TYPE_NUM("衝撃")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"吹っ飛べ！",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;破魔
		CASE BTL_GET_TYPE_NUM("破魔")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"私にさせるのは皮肉か何かかしら……",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;呪殺
		CASE BTL_GET_TYPE_NUM("呪殺")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"私はそういう妖怪じゃないけどね……",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;魔力
		CASE BTL_GET_TYPE_NUM("魔力")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"妖怪の\"魔\"、魅せてあげる",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;万能
		CASE BTL_GET_TYPE_NUM("万能")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"ちょっと、痛いわよ？",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;回復&支援
		CASE BTL_GET_TYPE_NUM("回復") || BTL_GET_TYPE_NUM("支援")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"態勢を整えましょう",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;上記以外
		CASEELSE
			;上のCASEで引っかからなかったスキルは全てここで判定

;			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
;			PRINTFORML ┃%"",72,LEFT%┃
;			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
	ENDSELECT

ENDIF
